@model List<DanielCordova_GitHubDashboard.Models.GitHubEvent>
@{
    ViewBag.Title = "GitHub Public Events Dashboard by Daniel Cordova";
}
<style>
    .dropdown-backdrop {
        position: static;
    }
</style>

<div class="jumbotron" style="padding:2% !important">
   <button onclick="location.href='@Url.Action("Index", "Dashboard")'; return false;">Refresh feed</button>
    @{int i = 1;}
    @foreach(var gitHubEvent in Model)
    {
        <div style="border:solid 1px black">
            <div>@gitHubEvent.EventActor.DisplayLoginName</div>
            <div>@gitHubEvent.EventType</div>
            <div>@gitHubEvent.EventRepository.RepositoryUrl</div>
            <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#details@(i)">Show Additional Details</button>
            <div id="details@(i)" class="collapse">
                <ul>
                    <li style="list-style:none">@gitHubEvent.EventId</li>
                    <li style="list-style:none">@gitHubEvent.IsPublic</li>
                    <li style="list-style:none">@gitHubEvent.CreatedDate</li>
                </ul>
            </div>
        </div>
        i++;
    }
</div>